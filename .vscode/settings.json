{
  "latex-workshop.latex.recipes": [
    {
      "name": "Pandoc â†’ XeLaTeX",
      "tools": [
        "pandoc-xelatex"
      ]
    },
    {
      "name": "lualatex",
      "tools": [
        "lualatex"
      ]
    },
    {
      "name": "lualatex -> biber -> lualatex",
      "tools": [
        "lualatex",
        "biber",
        "lualatex"
      ]
    },
    {
      "name": "latexmk (lualatex)",
      "tools": [
        "lualatexmk"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "pandoc-xelatex",
      "command": "pandoc",
      "args": [
        "../source/%DOCFILE%.md",
        "--from=markdown",
        "--to=latex",
        "--template=../templates/journal-template.tex",
        "--lua-filter=../filters/link-to-footnote.lua",
        "--lua-filter=../filters/name-filter.lua",
        "--lua-filter=../filters/tag-filter.lua",
        "--pdf-engine=xelatex",
        "--toc",
        "--toc-depth=1",
        "-o",
        "../output/%DOCFILE%.pdf"
      ],
      "env": {}
    },
    {
      "name": "lualatex",
      "command": "lualatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ]
    },
    // You can also add a latexmk tool specifically for lualatex
    {
      "name": "lualatexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-lualatex",
        "-f",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ]
    },
    // Biber for bibliography if you're using it
    {
      "name": "biber",
      "command": "biber",
      "args": [
        "%DOCFILE%"
      ]
    }
  ],
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
  "files.associations": {
    "*.tex": "latex",
    "*.lua": "lua"
  },
  "markdown.preview.breaks": true,
  "markdown.preview.linkify": true,
  "editor.wordWrap": "on",
  "editor.formatOnSave": false,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/._*": true,
    "**/*.aux": true,
    "**/*.log": true,
    "**/*.out": true,
    "**/*.toc": true,
    "**/*.synctex.gz": true
  }
}
